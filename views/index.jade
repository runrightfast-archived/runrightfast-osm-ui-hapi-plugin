extends layout

block head
  title #{t('title')} <#{env}>
  link(rel='stylesheet', href='/parts/cssmenu/styles.css')
  link(rel='stylesheet', href='/parts/csstabs/styles.css')
  link(rel='stylesheet', href='/parts/csstree/styles.css')

block header
  div.navbar
    p.navbar-text #{t("appname")}

block footer
  span.muted.credit #{t('title')} - v#{version}
  
block body
  div.page.container-liquid
    div.row
      div.col-sm-12
        cssmenu(items='items')
    div.content.row
      div.sidebar.col-sm-3
        csstree
      div.workspace.col-sm-9
        csstabs
  
block scripts
  script(type='text/javascript', src='/vendor/angularjs/1.2.0-rc3/js/angular.js')
  script(type='text/javascript', src='/vendor/angular-ui/ui-utils/ui-utils-0.0.4.js')
  script(type='text/javascript', src='/vendor/angular-ui/ui-bootstrap/ui-bootstrap-0.6.0.js')
  script(type='text/javascript', src='/vendor/angular-ui/ui-bootstrap/ui-bootstrap-tpls-0.6.0.js')
  script(type='text/javascript', src='/parts/cssmenu.js')
  script(type='text/javascript', src='/parts/csstabs.js')
  script(type='text/javascript', src='/parts/csstree.js')
  script(type='text/javascript', src='/js/app.js')
  script(type='text/javascript', src='/js/controllers.js')
  script(type='text/javascript', src='/js/directives.js')
  script(type='text/javascript', src='/js/events.js')
  script(type='text/javascript', src='/js/filters.js')
  script(type='text/javascript', src='/js/services.js')
